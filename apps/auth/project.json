{
  "name": "auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/auth/src",
  "projectType": "application",
  "targets": {
    "push": {
      "executor": "nx:run-script",
      "options": {
        "script": "push:auth"
      }
    },
    "test-db": {
      "command": "bash ./apps/auth/src/scripts/run-integration.sh"
    },
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/apps/auth",
        "main": "apps/auth/src/main.ts",
        "tsConfig": "apps/auth/tsconfig.app.json",
        "isolatedConfig": true,
        "generatePackageJson": true,
        "webpackConfig": "apps/auth/webpack.config.js"
      },
      "configurations": {
        "development": {},
        "production": {}
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "auth:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "auth:build:development"
        },
        "production": {
          "buildTarget": "auth:build:production"
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/auth/**/*.ts"]
      }
    },
    "test-int": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/auth/src/__test__/integration/jest.int.config.ts",
        "passWithNoTests": true,
        "runInBand": true
      },
      "dependsOn": ["test-db"],
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "test-unit": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "apps/auth/src/__test__/unit/jest.unit.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "docker-build": {
      "dependsOn": ["build"],
      "command": "docker build -f apps/auth/Dockerfile . -t erenmemo/auth"
    }
  },
  "tags": []
}
